{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@types/*": ["./src/types/*"],
      "@logger": ["./src/utils/logging/Logger.ts"],
      "@benchmarks/*": ["./src/workflow/ingestion/benchmarks/*"],
      "@example/*": ["../../example/*"],
      "@workflow/*": ["./src/workflow/*"],
      "@node/*": ["./src/node/*"],
      "@messages/*": ["./src/messages/*"],
      "@memories/*": ["./src/memories/*"],
      "@tools/*": ["./src/tools/*"],
      "@prompts/*": ["./src/prompts/*"],
      "@validation/*": ["./src/utils/validation/*"],
      "@improvement/*": ["./src/improvement/*"],
      "@behavioral/*": ["./src/improvement/behavioral/*"],
      "@gp/*": ["./src/improvement/gp/*"],
      "@settings/*": ["./src/settings/*"],
      "@utils/*": ["./src/utils/*"],
      "@env": ["./env.mjs"],
      "@/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js"
  ],
  "exclude": ["node_modules"]
}
