{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@runtime/*": ["../../runtime/*"],
      "@core/*": ["../../core/src/*"],
      "@shared/*": ["../../shared/src/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "../core/src/**/*.ts",
    "../runtime/**/*.ts"
  ],
  "exclude": ["node_modules", "src/experiments-2"]
}
