{
  "name": "@lucky/tools",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "description": "Unified tool framework for code and MCP tool integration",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": ["dist"],
  "scripts": {
    "build": "tsup --silent",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "tsc": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    },
    "./config/runtime": {
      "types": "./dist/config/runtime.d.ts",
      "import": "./dist/config/runtime.js"
    },
    "./definitions/*": "./src/definitions/*"
  },
  "dependencies": {
    "@lucky/shared": "workspace:*",
    "ai": "^5.0.58",
    "zod": "^3.25.73"
  },
  "devDependencies": {
    "@types/node": "^24.0.13",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "tsup": "8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
