{
    "name": "gp-lite",
    "version": "0.1.0",
    "description": "Tiny, zero-dependency GA/GP engine for TypeScript/JS with first-class types, deterministic RNG, and budget-aware runs.",
    "license": "MIT",
    "author": "Lars <lars@lars.lars>",
    "repository": {
        "type": "git",
        "url": "https://github.com/eenlars/gp-lite.git"
    },
    "homepage": "https://github.com/eenlars/gp-lite#readme",
    "bugs": {
        "url": "https://github.com/eenlars/lite-gp/issues"
    },
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "default": "./dist/index.js"
        },
        "./package.json": "./package.json"
    },
    "typesVersions": {
        "*": {
            "*": [
                "./dist/index.d.ts"
            ]
        }
    },
    "files": [
        "dist",
        "README.md",
        "CHANGELOG.md",
        "CONTRIBUTING.md",
        "CODE_OF_CONDUCT.md",
        "SECURITY.md",
        "ARCHITECTURE.md",
        "LICENSE"
    ],
    "sideEffects": false,
    "keywords": [
        "genetic-programming",
        "genetic-algorithm",
        "evolutionary-algorithms",
        "gp",
        "ga",
        "evolutionary",
        "search",
        "optimization",
        "deterministic",
        "rng",
        "typescript-library",
        "optimization",
        "typescript",
        "zero-dependency"
    ],
    "engines": {
        "node": ">=18.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
        "tsc": "tsc --noEmit",
        "test": "bunx vitest run",
        "test:watch": "bunx vitest",
        "lint": "eslint src --ext .ts",
        "format": "prettier --write 'src/**/*.ts' '__tests__/**/*.ts'",
        "prepare": "tsup",
        "prepublishOnly": "bun run tsc && bun run test"
    },
    "devDependencies": {
        "@types/node": "^22.0.0",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "eslint": "^8.57.0",
        "prettier": "^3.3.0",
        "tsup": "^8.0.0",
        "typescript": "^5.5.0",
        "vitest": "^3.2.4"
    }
}
