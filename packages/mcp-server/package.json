{
  "name": "@eenlars/alive-mcp",
  "version": "1.0.0",
  "description": "MCP server for workflow management and execution. Execute Lucky workflows programmatically with status tracking, cancellation, and async/sync execution modes.",
  "type": "module",
  "bin": {
    "lucky-mcp": "dist/index.js"
  },
  "files": ["dist"],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('dist/index.js', '755')\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:endpoints": "node test-endpoints.js",
    "start": "node dist/index.js",
    "start:cloud": "CLOUD_SERVICE=true node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write .",
    "prepare": "npm run build",
    "publish": "npm run build && npm publish",
    "publish-beta": "npm run build && npm publish --tag beta"
  },
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.2",
    "fastmcp": "^3.20.0",
    "typescript": "^5.9.2",
    "zod": "^4.1.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": ["mcp", "workflows", "automation", "lucky", "agent-execution"],
  "author": "eenlars",
  "bugs": {
    "url": "https://github.com/eenlars/alive-mcp/issues"
  },
  "homepage": "https://github.com/eenlars/alive-mcp#readme",
  "devDependencies": {
    "@types/node": "^24.3.1",
    "vitest": "^2.1.8"
  }
}
