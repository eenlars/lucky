{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@settings/*": ["./settings/*"],
      "@schemas/*": ["./schemas/*"],
      "@core/*": ["../packages/core/src/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.js"
  ],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../packages/core" }
  ]
}