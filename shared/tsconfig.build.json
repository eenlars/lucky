{
  "compilerOptions": {
    // Module settings
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,

    // Output settings
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Path resolution
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./src/*"]
    },

    "target": "ES2020",
    "lib": ["ESNext", "DOM"],

    // Code quality
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,

    // Integration
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}