{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ES2020",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@core/*": ["../core/src/*"],
      "@runtime/*": ["../runtime/*"],
      "@experiments/*": ["../packages/experiments/src/*"],
      "@lucky/shared": ["../packages/shared/src/index.ts"],
      "@lucky/shared/*": ["../packages/shared/src/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    ".next/types/**/*.ts",
    "src/core/utils/db/supabase/types.ts"
  ],
  "exclude": [
    "node_modules",
    "src/runtime/logging_folder",
    "../packages/experiments/src/experiments-2/**",
    ".next/**"
  ]
}
