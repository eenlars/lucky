{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@lucky/core/*": ["../../packages/core/src/*"],
      "@core/*": ["../../packages/core/src/*"],
      "@core/types/*": ["../../packages/core/src/types/*"],
      "@core/logger": ["../../packages/core/src/utils/logging/Logger.ts"],
      "@core/workflow/*": ["../../packages/core/src/workflow/*"],
      "@core/node/*": ["../../packages/core/src/node/*"],
      "@core/messages/*": ["../../packages/core/src/messages/*"],
      "@core/tools/*": ["../../packages/core/src/tools/*"],
      "@core/prompts/*": ["../../packages/core/src/prompts/*"],
      "@core/validation/*": ["../../packages/core/src/utils/validation/*"],
      "@core/improvement/*": ["../../packages/core/src/improvement/*"],
      "@core/core-config/*": ["../../packages/core/src/core-config/*"],
      "@core/utils/*": ["../../packages/core/src/utils/*"],
      "@lucky/shared": ["../../packages/shared/src"],
      "@lucky/shared/*": ["../../packages/shared/src/*"],
      "@lucky/tools": ["../../packages/tools/src"],
      "@lucky/tools/*": ["../../packages/tools/src/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts"]
}
