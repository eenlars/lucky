{
  "name": "lucky-monorepo",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.2.22",
  "workspaces": ["apps/*", "packages/*"],
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@lucky/core": "workspace:*",
    "@types/papaparse": "^5.3.16",
    "@typescript/native-preview": "^7.0.0-dev.20251009.1",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "tsconfig-paths": "^4.2.0",
    "tsup": "8.5.0",
    "tsx": "^4.20.3",
    "turbo": "^2.5.8",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "tsup": "8.5.0"
  },
  "engines": {
    "node": ">=18.20.0"
  },
  "scripts": {
    "prepare": "husky",
    "gen:env": "bun run scripts/generate-env-artifacts.ts",
    "gen:db": "cd packages/shared && bun run generate",
    "web": "bun --env-file .env --env-file .env.local turbo run dev --filter=together",
    "web:dev:direct": "cd apps/web && bun run dev",
    "dev": "bun --env-file .env --env-file .env.local turbo run dev",
    "build": "bun --env-file .env --env-file .env.local turbo run build",
    "build:shared": "bun --env-file .env --env-file .env.local turbo run build --filter=@lucky/shared",
    "build:models": "bun --env-file .env --env-file .env.local turbo run build --filter=@lucky/models",
    "build:tools": "bun --env-file .env --env-file .env.local turbo run build --filter=@lucky/tools",
    "build:app": "bun --env-file .env --env-file .env.local turbo run build --filter=together",
    "build:packages": "bun --env-file .env --env-file .env.local turbo run build --filter=@lucky/shared --filter=@lucky/tools",
    "build:examples": "bun --env-file .env --env-file .env.local turbo run build --filter=@lucky/examples",
    "test": "bun --env-file .env --env-file .env.local turbo run test",
    "test:unit": "bun --env-file .env --env-file .env.local turbo run test:unit",
    "test:integration": "bun --env-file .env --env-file .env.local turbo run test:integration",
    "test:integration:http": "bun --env-file .env --env-file .env.local vitest run --config vitest.integration.config.ts tests/integration/",
    "test:smoke": "bun --env-file .env --env-file .env.local vitest run tests/e2e-essential/smoke --config tests/e2e-essential/vitest.config.js",
    "test:gate": "bun --env-file .env --env-file .env.local vitest run tests/e2e-essential --config tests/e2e-essential/vitest.config.js",
    "lint": "biome lint .",
    "tsc": "bun --env-file .env --env-file .env.local turbo run tsc",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check --write .",
    "clean": "bun --env-file .env --env-file .env.local turbo run clean",
    "install:ci": "bun install --ignore-scripts"
  },
  "dependencies": {
    "ioredis": "^5.8.1",
    "ai": "^5.0.68",
    "@ai-sdk/react": "^2.0.0",
    "@ai-sdk/openai": "^2.0.52",
    "@ai-sdk/anthropic": "^2.0.27",
    "@ai-sdk/groq": "^2.0.24",
    "@ai-sdk/openai-compatible": "^1.0.22",
    "@openrouter/ai-sdk-provider": "^1.2.0",
    "secure-json-parse": "^2.7.0"
  }
}
