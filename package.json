{
  "type": "module",
  "workspaces": ["apps/*", "packages/*"],
  "dependencies": {
    "@anthropic-ai/sdk": "^0.40.1",
    "@mendable/firecrawl-js": "^1.29.3",
    "ai": "^5.0.58",
    "nanoid": "^5.1.5",
    "puppeteer": "^24.15.0"
  },
  "devDependencies": {
    "@lucky/core": "workspace:*",
    "@types/papaparse": "^5.3.16",
    "husky": "^9.1.7",
    "tsconfig-paths": "^4.2.0",
    "tsup": "8.5.0",
    "tsx": "^4.20.3",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "tsup": "8.5.0"
  },
  "engines": {
    "node": ">=18.20.0"
  },
  "scripts": {
    "prepare": "husky",
    "web": "cd apps/web && bun run dev",
    "build:shared": "cd packages/shared && bun run build",
    "build:tools": "cd packages/tools && bun run build",
    "build:app": "cd apps/web && bun run build",
    "build:packages": "cd packages/shared && bun run build && cd ../tools && bun run build",
    "build": "bun run build:shared && bun run build:tools && bun run build:app",
    "test:smoke": "bunx vitest run tests/e2e-essential/smoke --config tests/e2e-essential/vitest.config.js",
    "test:gate": "bunx vitest run tests/e2e-essential --config tests/e2e-essential/vitest.config.js",
    "tsc": "cd apps/web && tsc --noEmit && cd ../../packages/core && tsc --noEmit && cd ../examples && tsc --noEmit && cd ../shared && tsc --noEmit && cd ../tools && tsc --noEmit",
    "format": "prettier --write .",
    "install:ci": "bun install --ignore-scripts"
  }
}
